---
import NavBar from "./NavBar.astro";
interface Props {
    title: string;
    isTitle?: boolean;
}
const { title = "Audiophile e-commerce website", isTitle = false } =
    Astro.props;
---

<header class=`bg-[#000] ${isTitle?" h-[10rem] md:h-[17rem]":"h-[5rem]"}`>
    <NavBar bgColor="#000" />
    {
        isTitle && (
            <h1 class="text-2xl md:text-[35px] text-end w-fit mx-auto mt-5 md:mt-[4rem] text-white font-bold">
                {title.toUpperCase()}
            </h1>
        )
    }
</header>
